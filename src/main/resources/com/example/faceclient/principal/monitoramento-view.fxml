<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1016.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.faceclient.controller.MonitoramentoController">

    <!-- HBox para agrupar logs e dispositivos -->
    <HBox layoutX="20.0" layoutY="12.0" prefHeight="349.0" prefWidth="977.0" spacing="40">

        <!-- Caixa de Logs -->
        <VBox prefHeight="349.0" prefWidth="589.0" spacing="5">
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="484.0"
                   style="-fx-font-weight: bold;" text="Logs do Sistema" textAlignment="CENTER"/>
            <TextArea fx:id="logArea" editable="false" prefHeight="313.0" prefWidth="305.0"
                      style="-fx-control-inner-background: black; -fx-text-fill: lime;" wrapText="true"/>
        </VBox>

        <!-- Painel de Dispositivos com Scroll -->
        <VBox spacing="10">

            <!-- Título + botão Criar -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="266.0" style="-fx-font-weight: bold;"
                       text="Painel de Dispositivos"/>
                <Button prefHeight="25.0" prefWidth="157.0" text="Criar Dispositivo" onAction="#handleCriarDispositivo"/>
            </HBox>
            <!-- ScrollPane com lista de dispositivos -->
            <ScrollPane  fx:id="scroll" fitToWidth="true" prefHeight="300.0" prefWidth="493.0">
                <!-- Lista de dispositivos (exemplo 1) -->
                <content>
                    <!-- ESTE é o container que vamos popular -->
                    <VBox fx:id="listaDispositivos" spacing="10" style="-fx-padding: 10;"/>
                </content>
                <!-- Aqui você poderá adicionar quantos dispositivos quiser dinamicamente -->
            </ScrollPane>
        </VBox>
    </HBox>

</AnchorPane>
